{
  "name": "clean-up-the-web",
  "version": "1.0.2",
  "description": "Firefox extension that cleans up the web.",
  "main": "dist/js/main.min.js",
  "scripts": {
    "start": "npm run lint && npm run serve",
    "serve": "web-ext run",
    "serve:debug": "web-ext run --verbose",
    "lint": "npm run lint:js & npm run lint:ext",
    "lint:fix": "npm run lint:js:fix",
    "lint:js": "eslint src/js/main.js config/default.js",
    "lint:js:fix": "eslint src/js/main.js --fix && eslint config/default.js --fix",
    "lint:ext": "web-ext lint",
    "build": "npm run build:js & npm run build:img && npm run build:ext",
    "build:js": "mkdir -p dist/js && minify src/js/main.js > dist/js/main.min.js",
    "build:img": "mkdir -p dist/img && svgo src/img/icon.svg -o dist/img/icon.min.svg",
    "build:ext": "web-ext --config=config/default.js build",
    "sign": "web-ext sign --api-key=$AMO_JWT_ISSUER --api-secret=$AMO_JWT_SECRET",
    "release": "npm run lint && npm run build && npm run sign"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulshryock/clean-up-the-web.git"
  },
  "keywords": [
    "firefox",
    "extension"
  ],
  "author": "",
  "license": "The Hippocratic License",
  "bugs": {
    "url": "https://github.com/paulshryock/clean-up-the-web/issues"
  },
  "homepage": "https://github.com/paulshryock/clean-up-the-web#readme",
  "devDependencies": {
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "minify": "^6.0.1",
    "prettier": "^2.1.2",
    "svgo": "^1.3.2",
    "web-ext": "^5.3.0"
  }
}
